<%= form_for(@job_site_application) do |f| %>
    <% if @job_site_application.errors.any? %>
        <div id="error_explanation" xmlns="http://www.w3.org/1999/html">
          <h2><%= pluralize(@job_site_application.errors.count, "error") %> prohibited this job_site_application from being saved:</h2>

          <ul>
            <% @job_site_application.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.hidden_field :business_id, :value => @business.id %><br>
    </div>
    <div class="field">
      <%= f.label :school_id, 'Your School:' %><br>
      <%= f.collection_select(:school_id, School.all, :id, :name) %>
    </div>
    <div class="field">
      <%= f.label :school_code, 'Enter your school code:' %><br>
      <%= f.number_field :school_code %>
    </div>
    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <strong>Why do you want to work here?</strong>
      <textarea rows="10" cols="50"></textarea>
    </div>
    <div class="field">
      <strong>What are some important goals you have?</strong>
      <textarea rows="10" cols="50"></textarea>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>