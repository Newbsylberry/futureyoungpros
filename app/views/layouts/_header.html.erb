<header>  
  <div class="row">
    <div class="masthead">
      <div class="col-xs-11 col-sm-11 col-lg-11"> 
	  <h3 class="text-muted">Future Young Professionals</h3>
	    <ul class="nav nav-pills nav-justified">
	      <li><%= link_to "Home", root_path %></li>
	      <li><%= link_to "About", about_path %></li>
	      <li><%= link_to "Professionals", professionals_path %></li>
	      <li><%= link_to "Students", students_path %></li>
	      <li><%= link_to "Businesses", businesses_path %></li>
	      <li><div class="btn-group">
		  <button type="button" class="btn-large btn-success dropdown-toggle" data-toggle="dropdown">
		    <% if user_signed_in? %>  <%= current_user.email %> <% else %> Get Involved Now!  <% end %> <span class="caret"></span>
		  </button>
		    <% if user_signed_in? and current_user.role == "admin" %>
		        <ul class="dropdown-menu" role="menu">
			  <li><%= link_to "Home", welcome_admin_path %></li>
			  <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
		        </ul>
		      <% elsif user_signed_in? and current_user.role == "professional" %>
		        <ul class="dropdown-menu" role="menu">
			  <li><%= link_to "Home", welcome_professional_path %></li>
			  <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
		        </ul>
		      <% else %>
		      <ul class="dropdown-menu" role="menu">
			<li><%= link_to "Sign In", new_user_session_path %></li>
			<li><%= link_to "Sign Up", new_user_registration_path %></li>
		      </ul>
		      <% end %>
		</div> 
	      </li>
	    </ul>	   		    
      </div>
    <div class="col-xs-1 col-sm-1 col-lg-1">
    </div>
    </div>   
  </div>
</header>
  

