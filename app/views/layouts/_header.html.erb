<header>  
  <div class="row">
    <div class="masthead">
      <div class="col-xs-12 col-sm-9 col-lg-10"> 
	  <h3 class="text-muted">Future 40Below'er Program</h3>
	    <ul class="nav nav-pills nav-justified">
	      <li><%= link_to "Home", root_path %></li>
	      <li><%= link_to "Students", students_path %></li>
	      <li><%= link_to "Professionals", professionals_path %></li>
	      <li><%= link_to "Businesses", businesses_path %></li>
	      <li><%= link_to "Administrators", administrators_path %></li>
	    </ul>
      </div>
    <div class="col-xs-6 col-sm-3 col-lg-2">
	   <% if user_signed_in? %>
             <button type="button" class="btn pullright">
	     <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></button>
	       <% @role = current_user.role
		  if @role == 'admin' %>
	       <button type="button" class="btn pullright">
		 <%= link_to "Admin Home", welcome_admin_path %>
	       </button>
	     <% elsif @role == 'professional' %>
	     
	     <button type="button" class="btn pullright">
	       <%= link_to "Professional Home", welcome_professional_path %>
	     </button>
	       <% end %>
	     <%= current_user.email %>
	   <% else %>
	   <button type="button" class="btn pull-right">
	   <%= link_to "Sign Up", new_user_registration_path  %></button>
	   <button type="button" class="btn pull-right">
	   <%= link_to "Sign In", new_user_session_path  %></button>
	   <% end %>
