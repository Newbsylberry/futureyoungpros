<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Contactfirstname</th>
      <th>Contactlastname</th>
      <th>Contactemail</th>
      <th>School district</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.address1 %></td>
        <td><%= school.address2 %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.zipCode %></td>
        <td><%= school.contactFirstName %></td>
        <td><%= school.contactLastName %></td>
        <td><%= school.contactEmail %></td>
        <td><%= school.school_district_id %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

