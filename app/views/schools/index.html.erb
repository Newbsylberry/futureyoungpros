<div class="well">
  <h1>Listing schools</h1>
</div>
<div class="row">
  <%= render 'layouts/admin_menu' %>
  <div class="col-sm-9 col-md-9 col-lg-9">
    <div class="table-responsive">
      <table class="table table-hover">
	<thead>
	  <tr>
	    <th>Name</th>
	    <th>City</th>
	    <th>State</th>
	    <th>Contactfirstname</th>
	    <th>Contactlastname</th>
	    <th>Contactemail</th>
	    <th>School Code</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	</thead>

	<tbody>
	  <% @schools.each do |school| %>
	  <tr>
            <td><%= school.name %></td>
            <td><%= school.city %></td>
            <td><%= school.state %></td>
            <td><%= school.contactFirstName %></td>
            <td><%= school.contactLastName %></td>
            <td><%= school.contactEmail %></td>
            <td><%= school.school_code %></td>
            <td><%= link_to 'Show', school %></td>
            <td><%= link_to 'Edit', edit_school_path(school) %></td>
            <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	  <% end %>
	</tbody>
      </table>
    </div>
    <br>
    <%= link_to 'New School', new_school_path %>
  </div>
</div>
