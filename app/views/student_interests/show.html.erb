<% if flash[:notice] %>
  <p id="notice"><%= notice %></p>
<% end %>
<div class="row">
  <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
    <p>
      <strong>Student First Name:</strong>
      <%= @student_interest.firstName %>
    </p>
    <p>
      <strong>Student Last Name:</strong>
      <%= @student_interest.lastName %>
    </p>
    <p>
      <strong>School:</strong>
      <%= @student_interest.school.name if @student_interest.school %>
    </p>
    <p>
      <strong>School Point of Contact:</strong>
      <%= @student_interest.school.contactFirstName + " " +  @student_interest.school.contactLastName if @student_interest.school %>
    </p>
    <p>
      <strong>Point of Contact Email:</strong>
      <%= @student_interest.school.contactEmail if @student_interest.school %>
    </p>
    <p>
      <strong>Category:</strong>
      <%= @student_interest.category.name if @student_interest.category %>
    </p>
    <p>
    <strong>Student Notes:</strong>
      <%= @student_interest.notes %>
    </p>
    <%= link_to 'Edit Student Interest', edit_student_interest_path(@student_interest) %> |
    <%= link_to 'Return to Student Interest List', student_interests_path %>
  </div>
  <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
    <%= render 'layouts/match_form' %>
  </div>
</div>
<div class="row">
  <div class="col-xs-11">
    <h1>Student Matches</h1>
    <div class="table-responsive">
      <table class="table table-hover">
	<thead>
	  <tr>
	    <th>Administrator Email</th>
	    <th>Student First Name</th>
	    <th>Student Point of Contact</th>
	    <th>Professionals Email</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	</thead>

	<tbody>
	  <% if @matches %>
	    <% @matches.each do |match| %>
	  <tr>
	    <td><%= match.user.email %>
	    <td><%= match.student_interest.firstName %></td>
	    <td><%= match.student_interest.school.contactEmail %></td>
	    <td><%= match.mou.emailAddress %></td>
	    <td><%= link_to 'Show', match %></td>
	    <td><%= link_to 'Edit', edit_match_path(match) %></td>
	    <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	  <% end %>
	</tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>    

