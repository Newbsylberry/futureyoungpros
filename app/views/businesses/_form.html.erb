<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= form_for(@business) do |f| %>
        <% if @business.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@business.errors.count, "error") %> prohibited this business from being saved:</h2>
              <ul>
                <% @business.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name, "Business Name:" %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description:" %><br>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :zip, "Zip:" %><br>
          <%= f.text_field :zip, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :picture, "Logo (optional)" %><br>
          <%= f.file_field :picture %>
        </div>
        <% if current_user %>
            <%= f.label :job_site, "Job Site?" %>
            <%= f.check_box :job_site %>
        <% end %>
        <div class="actions">
          <%= f.submit %>
        </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-6">
    <div class="textContainer">
      <p>This is purely for organizational purposes, and not an agreement.</p>
    </div>
  </div>
</div>
