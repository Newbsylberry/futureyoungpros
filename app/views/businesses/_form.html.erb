
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Sign Up For More Information</h1>
    <%= form_for(@business) do |f| %>
        <% if @business.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@business.errors.count, "error") %> prohibited this business from being saved:</h2>
              <ul>
                <% @business.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name, "Business Name:", id: "business-name" %><br>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter the name of your business" %>
        </div>
        <div class="form-group">
          <%= f.label :contact, "Contact Information:" %><br>
          <%= f.text_field :contact_email, class: "form-control", placeholder: "Enter your email address" %>
        </div>

        <% if current_user %>
            <%= f.label :job_site, "Job Site?" %>
            <%= f.check_box :job_site %>
            <div class="form-group">
              <%= f.label :picture, "Logo (optional)" %><br>
              <%= f.file_field :picture %>
            </div>
        <% end %>
        <div class="actions">
          <%= f.submit value: "Sign Up to Receive More Information", id: "business-submit-button" %>
        </div>
    <% end %>
    <%= link_to 'Back', root_path, id: "business-back-link" %>
  </div>
</div>

