<div class="row">
  <div class="col-xs-12 col-md-6">    
      <%= form_for(@mou) do |f| %>
      <% if @mou.errors.any? %>
      <div id="error_explanation">
	<h2><%= pluralize(@mou.errors.count, "error") %> prohibited this mou from being saved:</h2>
	<ul>
	  <% @mou.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	  <% end %>
	</ul>
      </div>
      <% end %>
    
    <div class="form-group">
      <%= f.label :business_id,"Business:" %><br>
      <%= collection_select(:mou, :business_id, Business.all, :id, :name) %>
      <%= link_to "Add Business To List", new_business_path %>
    </div>
    <div class="form-group">
      <%= label :category_id,"Category:" %><br>
      <%= collection_select(:mou, :category_id, Category.all, :id, :name) %>
    </div>
    <div class="form-group">
      <%= f.label :emailAddress, "Email Address:" %><br>
      <%= f.text_field :emailAddress, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :firstName, "First Name:" %><br>
      <%= f.text_field :firstName, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :lastName, "Last Name:" %><br>
      <%= f.text_field :lastName, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :jobTitle, "Job Title:" %><br>
      <%= f.text_field :jobTitle, class: "form-control" %>
    </div>
    <div class="field"> 
	  <% ['Full Day - No Lunch', 'Full Day - Lunch Provided', 'Half-Day'].each do |considerations| %>
	  <%= radio_button_tag('mou[considerations]', considerations) %>
	  <%= label :considerations, considerations %>
	 <br>
	  <% end %>
    </div>

    <!--   <div class="form-group">
      <%= f.label :phone, "Phone Number:" %><br>
      <%= f.text_field :phone, class: "form-control" %>
    </div> -->
    
