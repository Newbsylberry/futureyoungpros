    <div class="actions">
      <%= f.submit "Host a Student" %>
    </div>
  </div>
  <div class="col-xs-12 col-md-6">
    <div class="welledDisclaimer">
      <div class="well well-sm">   
        <div class"mou_image">
	  <%= image_tag("mou.jpg", :class => "image-response", :width => "100%", :alt => "MOU") %>
	</div>
	<h3>By clicking submit you understand that:</h3>
	<p>* Students are to be provided with field experiences</p>
	<p>* Students are not expected to perform tasks, simply observe</p>
	<p>* Students should be prepared for job or site specific information</p>
	<p>* Hosts are encouraged to be very explicit and genuine in expressing 
	  all aspects of career<p>
	<p>* Please refer to information on site_url on do's and do not's for hosting</p>
      </div>
    </div>
  </div>
</div>
  

    

<% end %>
