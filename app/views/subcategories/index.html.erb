<h1>Listing subcategories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.name %></td>
        <td><%= subcategory.description %></td>
        <td><%= link_to 'Show', category_subcategory_path(@category, subcategory) %></td>
        <td><%= link_to 'Edit', edit_category_subcategory_path(@category, subcategory) %></td>
        <td><%= link_to 'Destroy', category_subcategory_path(@category, subcategory), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subcategory', new_category_subcategory_path(@category) %>
